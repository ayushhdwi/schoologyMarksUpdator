{
    "name": "GradeUp",
    "version": "1.0",
    "description": "Changing the DOM through extension",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "contextMenus"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["autoload_script.js", "popup.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens hello.html"
        }
    }
}
